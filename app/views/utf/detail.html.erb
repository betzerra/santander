<h1><%= @unit_trust.name %></h1>

<table>
  <tr>
    <td>Fecha</td>
    <td>Valor</td>
    <td>Var. diaria</td>
    <td>Últimos 30 días</td>
    <td>Últimos 90 días</td>
    <td>Últimos 12 meses</td>
  </tr>

  <% @list.each do |item| %>
  <tr>
    <td> <%=item.date %> </td>
    <td> <%=item.value %> </td>
    <td> <%=item.last_day %> </td>
    <td> <%=item.last_30_days %> </td>
    <td> <%=item.last_90_days %> </td>
    <td> <%=item.last_12_months %> </td>
  </tr>
  <%end%>
</table>
